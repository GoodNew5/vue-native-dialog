{
  "name": "my-vue-app",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "npm run setNode vite",
    "build": "npm run setNode vue-tsc -b && vite build",
    "lint": "npm run setNode eslint ./src/ --fix",
    "format": "npm run setNode prettier --write src/",
    "build-only": "npm run setNode vite build",
    "preview": "npm run setNode vite preview",
    "mock-server": "npm run setNode json-server --watch ./mock-server/db.json --port 3009",
    "mock-server:generate-posts": "npm run setNode json-server ./mock-server/helpers/generate-posts.js",
    "setNode": "npx -p node@22"
  },
  "dependencies": {
    "@vueuse/core": "^11.2.0",
    "animejs": "^3.2.2",
    "browser-dtector": "^4.1.0",
    "hammerjs": "^2.0.8",
    "pinia": "^2.2.5",
    "v3-scroll-lock": "^1.3.2",
    "vue": "^3.5.12",
    "vue-router": "^4.4.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.14.0",
    "@faker-js/faker": "^9.1.0",
    "@histoire/plugin-vue": "^0.17.17",
    "@types/animejs": "^3.1.12",
    "@types/hammerjs": "^2.0.46",
    "@types/node": "^18.14.2",
    "@typescript-eslint/eslint-plugin": "^8.12.2",
    "@typescript-eslint/parser": "^8.12.2",
    "@vitejs/plugin-vue": "^5.1.4",
    "@vue/eslint-config-prettier": "^10.1.0",
    "@vue/eslint-config-typescript": "^14.1.3",
    "eslint": "^9.14.0",
    "eslint-plugin-vue": "^9.30.0",
    "globals": "^15.11.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.3.3",
    "rollup-plugin-visualizer": "^5.12.0",
    "sass-embedded": "^1.80.5",
    "stylelint": "^16.10.0",
    "stylelint-config-standard": "^36.0.1",
    "stylelint-config-standard-scss": "^13.1.0",
    "typescript": "~5.6.2",
    "typescript-eslint": "^8.12.2",
    "vite": "^5.4.10",
    "vue-tsc": "^2.1.8"
  }
}
